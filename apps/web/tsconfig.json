{
  "extends": "../../packages/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@repo/shared": [
        "../../packages/shared/src"
      ]
    },
    "isolatedModules": true
  },
  "include": [
    "**/*.cts",
    "**/*.mts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
